<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:view="clr-namespace:AppMeteoMAUI.View"
       xmlns:viewModel="clr-namespace:AppMeteoMAUI.ViewModel"
       x:Class="AppMeteoMAUI.View.TabBarPageHome"
       Shell.NavBarIsVisible="True"
       Shell.FlyoutBehavior="Flyout"
       Shell.FlyoutItemIsVisible="True"
       Shell.FlyoutHeight="200"
       Shell.FlyoutWidth="200">
    <FlyoutItem Title="Meteo 7 giorni"
                Icon="clear_day.svg">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate view:MainPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Meteo 1 giorno"
                Icon="drizzle.svg">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate view:Meteo1Day}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Impostazioni"
                Icon="settings.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate view:Settings}" />
        </Tab>
    </FlyoutItem>
</Shell>