<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMeteoMAUI.View.MainPage"
             xmlns:viewModel="clr-namespace:AppMeteoMAUI.ViewModel"
             xmlns:model="clr-namespace:AppMeteoMAUI.Model"
             BackgroundColor="{StaticResource Primary}">
    <ContentPage.BindingContext>
        <viewModel:MeteoViewModel></viewModel:MeteoViewModel>
    </ContentPage.BindingContext>
    <Grid
        ColumnDefinitions="*,*"
        ColumnSpacing="5"
        RowDefinitions="Auto,Auto,*,Auto"
        RowSpacing="0">
        <RefreshView
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Command="{Binding CercaLocalitaCommand}">
            <ContentView>
                <CollectionView ItemsSource="{Binding currentForecast}"
                                    SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:CurrentForecast">
                            <Frame Style="{StaticResource CardView}">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:MeteoViewModel}}, Path=GoToDetailsCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Grid Padding="0" ColumnDefinitions="75,250,*">
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="50"
                                        Source="{Binding ImageUrl}"
                                        WidthRequest="50"/>
                                    <StackLayout
                                        Grid.Column="1"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center">
                                        <Label
                                            Style="{StaticResource MediumLabel}"
                                            Text="{Binding Data, StringFormat='{0:D}'}"/>
                                    </StackLayout>
                                    <VerticalStackLayout
                                        Grid.Column="2"
                                        VerticalOptions="Center"
                                        Padding="10">
                                        <Label Style="{StaticResource MediumLabel}" Text="{Binding Temperature2mMax}" />
                                        <Label Style="{StaticResource MediumLabel }" Text="{Binding Temperature2mMin}" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ContentView>
        </RefreshView>
        <SearchBar
                x:Name="searchBar"
                BackgroundColor="Gray"
                SearchCommand="{Binding CercaLocalitaCommand}"
                Text="{Binding Text}"
                Placeholder="Cerca una località..."
                WidthRequest="320"
                HeightRequest="50"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                FontFamily="TimesNewRoman"
                FontSize="16"
                Margin="10 ,5, 0, 0"
                />
        <ImageButton
                Margin="10, 5, 10, 0"
                Source="mirino.svg"
                Command="{Binding GetCurrentLocationCommand}"
                Style="{StaticResource ImageButtonOutline}"
                WidthRequest="50"
                HeightRequest="50"
                Grid.Column="1"
                HorizontalOptions="End"
                VerticalOptions="Start"/>
        <ImageButton
                Margin="0, 0, 10, 0"
                Source="settings.png"
                Command="{Binding GoToSettingsCommand}"
                Style="{StaticResource ImageButtonOutline}"
                WidthRequest="50"
                HeightRequest="50"
                Grid.Row="3"
                Grid.Column="1"
                HorizontalOptions="End"/>
        <Label
            Text="{Binding Temperatura}"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontFamily="TimesNewRoman"
            FontSize="16"
            Grid.ColumnSpan="2"
            Grid.Row="1"/>
    </Grid>
</ContentPage>
