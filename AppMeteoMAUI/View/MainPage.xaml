<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMeteoMAUI.MainPage"
             xmlns:viewModel="clr-namespace:AppMeteoMAUI.ViewModel"
             xmlns:model="clr-namespace:AppMeteoMAUI.Model">
    <StackLayout>
        <SearchBar x:Name="searchBar"
                   SearchCommand="{Binding CercaLocalitaCommand}"
                   Text="{Binding Text}"
                   Placeholder="Cerca una località"/>
        <Button Text="Prendi la posizione corrente"
                Command="{Binding GetCurrentLocationCommand}"/>
    </StackLayout>
</ContentPage>
